@inherits UmbracoViewPage

@using Umbraco.Web.Models
@using System.Collections.Generic;
@using ImageProcessor.Web

@{
    IPublishedContent homePage = Umbraco.AssignedContentItem.AncestorOrSelf("home");
    bool isHomePage = Umbraco.AssignedContentItem.Id == homePage.Id;
    IPublishedContent galleryFolder = Umbraco.AssignedContentItem.GetPropertyValue<IPublishedContent>("galleryFolder");
    List<IPublishedContent> galleryItems = galleryFolder.Children.ToList();
}

<div class="article-list">
    <div class="container">
        <div class="intro">
            <h2 class="text-center">@(Umbraco.AssignedContentItem.GetPropertyValue<string>("galleryTitle"))</h2>
            <p class="text-center">@(Umbraco.AssignedContentItem.GetPropertyValue<string>("galleryDescription"))</p>
        </div>
        @if (galleryItems != null && galleryItems.Any())
            {
                <div class="row articles">
                    @foreach (IPublishedContent image in galleryItems)
                    {
                        <div class="col-md-4 col-sm-6 item">
                            <a class="galleryImage" href="@image.Url"><img title="@image.Name" class="img-responsive" src="@image.GetCropUrl(720, 455)"></a>
                        </div>
                    }
                </div>
            }
    </div>
</div>
